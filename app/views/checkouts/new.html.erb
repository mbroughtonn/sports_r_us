<h1 class="title is-3">Checkout</h1>

<%= form_with model: @customer, url: checkouts_path, method: :post, local: true, data: { turbo: false } do |f| %>
  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :address, class: "label" %>
    <div class="control">
      <%= f.text_field :address, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :city, class: "label" %>
    <div class="control">
      <%= f.text_field :city, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :province, class: "label" %>
    <div class="control">
      <%= f.select :province, options_for_select(["AB", "BC", "MB", "ON", "QC", "SK", "NS", "NB", "NL", "PE", "NT", "NU", "YT"]), {}, class: "select" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :postal_code, class: "label" %>
    <div class="control">
      <%= f.text_field :postal_code, class: "input" %>
    </div>
  </div>

  <div class="field mt-4">
    <%= f.submit "Pay Now", class: "button is-primary", id: "submit-button" %>
  </div>
<% end %>
