<h1>Categories (Sports)</h1>

<div>
  <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-secondary mt-3' %>
</div>

<div class="mt-2">
  <%= link_to 'New Category (Sport)', new_admin_category_path, class: 'btn btn-primary' %>
</div>

<table class="table table-bordered mt-4">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>

        <td>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-warning btn-sm' %>

          <span style="display: inline;">
                        <%= form_with(url: admin_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' }, class: 'inline-form') do %>
              <%= submit_tag 'Delete', class: 'btn btn-danger btn-sm' %>
            <% end %>
          </span>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
