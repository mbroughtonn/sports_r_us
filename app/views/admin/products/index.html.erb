<h1>All Products</h1>

<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.category.name %></td>
        <td><%= product.brand.name %></td>
        <td>
          <%= link_to 'Show', admin_product_path(product), class: 'btn btn-info' %> |
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-warning' %> |
          <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
