<% @products = Product.all %>

<h1>All Products</h1>

<div>
  <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-secondary mt-3' %>
</div>

<div class="mt-2">
  <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Stock Quantity</th> <!-- Added column header for stock quantity -->
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.category.name %></td>
        <td><%= product.brand.name %></td>
        <td><%= product.stock_quantity %></td> <!-- Added stock quantity column -->
        <td>
          <%= link_to 'Show', admin_product_path(product), class: 'btn btn-info is-small' %>
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-warning is-small' %>

          <span style="display: inline;">
            <%= button_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger is-small', form: { style: 'display:inline' } %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
